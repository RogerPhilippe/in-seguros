<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/title_settings">

        <SwitchPreference
            android:key="auto_login"
            android:title="Manter-me conectado"
            android:summary="Manter-me conectado por 7 dias.\nApós esse tempo, você deverá fazer login novamente."
            android:defaultValue="true"/>

        <SwitchPreference
            android:key="notification_active"
            android:title="Notificações ativas"
            android:summary="Receber notificações push."
            android:defaultValue="true"/>

    </PreferenceCategory>

    <PreferenceCategory app:title="Informações do app">

        <Preference
            app:key="app_desc"
            app:icon="@mipmap/ic_in_seguros_icon"
            app:title="@string/app_description"/>

        <Preference
            app:key="app_version"
            app:title="@string/environment_and_version_number"/>

        <Preference
            app:key="app_devs"
            app:title="Desenvolvedores:\nFelipe\nRafael\nRoger\nValmir"/>

    </PreferenceCategory>

</androidx.preference.PreferenceScreen>